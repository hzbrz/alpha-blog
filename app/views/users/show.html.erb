<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <!-- any method that helps us with a view is put in the helpers/application_helper.rb, find out how
    gravatar_for works there. -->
    <%= gravatar_for @user, size: 160 %>
  </div>
</div>
  <h4 align="center"><%= @user.username %>'s articles</h4>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
  <!-- user_articles holds all the articles for that user so it will loop over that in the partial -->
  <%= render 'articles/article', obj: @user_articles %>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
